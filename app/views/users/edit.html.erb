

<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h2>User info</h2>

<% if @user.errors.any? %>
  <h3><%= @user.errors.count %>error prohibited this obj from being saved:</h3>

  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @user do |f| %>
<div class="form-group">
 <label for="inputName">Name</label>
 <%= f.text_field :name, class:"form-control name"%>
 </div>
 
 <div class="form-group">
 <label for="inputImage">ProfileImage</label>
 <%= f.file_field :profile_image, class:"form-control-file" %>  
 </div>
 
 <div class="form-group">
 <labe for="user_Introduction">Introduction</labe>
 <%= f.text_field :introduction, class:"form-control introduction"%>
 </div>
 
 <div class="form-group">
 <labe for="submit"></labe>
 <%= f.submit "Update User", class:"btn btn-secondary bg-secondary" %>
 </div>
<% end %>
</div>
